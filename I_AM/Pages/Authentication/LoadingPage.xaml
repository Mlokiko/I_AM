<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:shell="clr-namespace:Microsoft.Maui.Controls;assembly=Microsoft.Maui.Controls"
             x:Class="I_AM.Pages.Authentication.LoadingPage"
             BackgroundColor="#FFFFFF"
             shell:Shell.NavBarIsVisible="False"
             shell:Shell.TabBarIsVisible="False">
    <Grid RowDefinitions="*" ColumnDefinitions="*">
        <VerticalStackLayout 
            Spacing="20"
            VerticalOptions="Center"
            HorizontalOptions="Center">
            <!-- Placeholder for your logo/image -->
            <Image
                x:Name="SplashImage"
                Aspect="AspectFit"
                WidthRequest="150"
                HeightRequest="150"
                HorizontalOptions="Center" />
            
            <!-- Optional: Add a subtle loading indicator -->
            <Label 
                Text="I_AM"
                FontSize="24"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                TextColor="#333333" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>

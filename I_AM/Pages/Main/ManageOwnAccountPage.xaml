<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
x:Class="I_AM.Pages.Main.ManageOwnAccountPage"
Title="Zarządzaj Kontem"
Shell.NavBarIsVisible="True"
BackgroundColor="{AppThemeBinding Light=White, Dark=#121212}">

    <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="*" RowSpacing="0">
        
        <!-- Header -->
        <VerticalStackLayout 
            Grid.Row="0"
            Padding="20"
            Spacing="5"
            BackgroundColor="#512BD4">
            <Label 
                Text="Moje Konto"
                FontSize="32"
                FontAttributes="Bold"
                TextColor="White"
                HorizontalOptions="Center" />
        </VerticalStackLayout>

        <!-- Content -->
        <ScrollView 
            Grid.Row="1"
            BackgroundColor="{AppThemeBinding Light=White, Dark=#121212}">
            <VerticalStackLayout 
                Padding="20"
                Spacing="15">

                <!-- Loading Indicator -->
                <ActivityIndicator 
                    x:Name="LoadingIndicator"
                    IsRunning="True"
                    IsVisible="True"
                    Color="#512BD4" />

                <!-- Error Message -->
                <Label 
                    x:Name="ErrorLabel"
                    Text=""
                    TextColor="#d32f2f"
                    IsVisible="False"
                    FontSize="14"
                    HorizontalOptions="Fill"
                    HorizontalTextAlignment="Center" />

                <!-- User Data Frame -->
                <Frame 
                    BorderColor="#512BD4"
                    CornerRadius="10"
                    Padding="15"
                    HasShadow="True"
                    BackgroundColor="{AppThemeBinding Light=White, Dark=#1F1F1F}">
                    <VerticalStackLayout Spacing="15">

                        <!-- Email Section -->
                        <VerticalStackLayout Spacing="5">
                            <Label 
                                Text="Email"
                                FontSize="14"
                                FontAttributes="Bold"
                                TextColor="{AppThemeBinding Light=#666666, Dark=#B0B0B0}" />
                            <Label 
                                x:Name="EmailLabel"
                                Text="-"
                                FontSize="16"
                                TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                        </VerticalStackLayout>

                        <BoxView 
                            HeightRequest="1"
                            Color="{AppThemeBinding Light=#EEEEEE, Dark=#333333}" />

                        <!-- First Name Section -->
                        <VerticalStackLayout Spacing="5">
                            <Label 
                                Text="Imię"
                                FontSize="14"
                                FontAttributes="Bold"
                                TextColor="{AppThemeBinding Light=#666666, Dark=#B0B0B0}" />
                            <Label 
                                x:Name="FirstNameLabel"
                                Text="-"
                                FontSize="16"
                                TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                        </VerticalStackLayout>

                        <BoxView 
                            HeightRequest="1"
                            Color="{AppThemeBinding Light=#EEEEEE, Dark=#333333}" />

                        <!-- Last Name Section -->
                        <VerticalStackLayout Spacing="5">
                            <Label 
                                Text="Nazwisko"
                                FontSize="14"
                                FontAttributes="Bold"
                                TextColor="{AppThemeBinding Light=#666666, Dark=#B0B0B0}" />
                            <Label 
                                x:Name="LastNameLabel"
                                Text="-"
                                FontSize="16"
                                TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                        </VerticalStackLayout>

                        <BoxView 
                            HeightRequest="1"
                            Color="{AppThemeBinding Light=#EEEEEE, Dark=#333333}" />

                        <!-- Age Section -->
                        <VerticalStackLayout Spacing="5">
                            <Label 
                                Text="Wiek"
                                FontSize="14"
                                FontAttributes="Bold"
                                TextColor="{AppThemeBinding Light=#666666, Dark=#B0B0B0}" />
                            <Label 
                                x:Name="AgeLabel"
                                Text="-"
                                FontSize="16"
                                TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                        </VerticalStackLayout>

                        <BoxView 
                            HeightRequest="1"
                            Color="{AppThemeBinding Light=#EEEEEE, Dark=#333333}" />

                        <!-- Sex Section -->
                        <VerticalStackLayout Spacing="5">
                            <Label 
                                Text="Płeć"
                                FontSize="14"
                                FontAttributes="Bold"
                                TextColor="{AppThemeBinding Light=#666666, Dark=#B0B0B0}" />
                            <Label 
                                x:Name="SexLabel"
                                Text="-"
                                FontSize="16"
                                TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                        </VerticalStackLayout>

                        <BoxView 
                            HeightRequest="1"
                            Color="{AppThemeBinding Light=#EEEEEE, Dark=#333333}" />

                        <!-- Phone Number Section -->
                        <VerticalStackLayout Spacing="5">
                            <Label 
                                Text="Nr Telefonu"
                                FontSize="14"
                                FontAttributes="Bold"
                                TextColor="{AppThemeBinding Light=#666666, Dark=#B0B0B0}" />
                            <Label 
                                x:Name="PhoneNumberLabel"
                                Text="-"
                                FontSize="16"
                                TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                        </VerticalStackLayout>

                        <BoxView 
                            HeightRequest="1"
                            Color="{AppThemeBinding Light=#EEEEEE, Dark=#333333}" />

                        <!-- Created At Section -->
                        <VerticalStackLayout Spacing="5">
                            <Label 
                                Text="Utworzone"
                                FontSize="14"
                                FontAttributes="Bold"
                                TextColor="{AppThemeBinding Light=#666666, Dark=#B0B0B0}" />
                            <Label 
                                x:Name="CreatedAtLabel"
                                Text="-"
                                FontSize="14"
                                TextColor="{AppThemeBinding Light=#999999, Dark=#808080}" />
                        </VerticalStackLayout>

                        <BoxView 
                            HeightRequest="1"
                            Color="{AppThemeBinding Light=#EEEEEE, Dark=#333333}" />

                        <!-- User Type Section -->
                        <VerticalStackLayout Spacing="5">
                            <Label 
                                Text="Typ Konta"
                                FontSize="14"
                                FontAttributes="Bold"
                                TextColor="{AppThemeBinding Light=#666666, Dark=#B0B0B0}" />
                            <Label 
                                x:Name="UserTypeLabel"
                                Text="-"
                                FontSize="16"
                                TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                        </VerticalStackLayout>

                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Footer Buttons -->
        <VerticalStackLayout 
            Grid.Row="2"
            Padding="20"
            Spacing="10"
            BackgroundColor="{AppThemeBinding Light=White, Dark=#121212}">

            <Button 
                x:Name="EditButton"
                Text="Edytuj Profil"
                Clicked="OnEditButtonClicked"
                BackgroundColor="#512BD4"
                TextColor="White"
                CornerRadius="10" />

            <Button 
                x:Name="DeleteAccountButton"
                Text="Usuń Konto"
                Clicked="OnDeleteAccountClicked"
                BackgroundColor="#d32f2f"
                TextColor="White"
                CornerRadius="10" />

            <Button 
                x:Name="BackButton"
                Text="Wróć"
                Clicked="OnBackClicked"
                BackgroundColor="Transparent"
                TextColor="#512BD4"
                BorderColor="#512BD4"
                BorderWidth="1"
                CornerRadius="10" />

        </VerticalStackLayout>

    </Grid>

</ContentPage>

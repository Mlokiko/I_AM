<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
xmlns:local="clr-namespace:I_AM.Pages.Main"
x:Class="I_AM.Pages.Main.NotificationPage"
Title="Powiadomienia"
Shell.NavBarIsVisible="False"
BackgroundColor="{AppThemeBinding Light=White, Dark=#121212}">

<VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="FillAndExpand">
        
    <Label Text="Powiadomienia" FontSize="32" FontAttributes="Bold" HorizontalOptions="Center" TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />

        <ActivityIndicator x:Name="LoadingIndicator" IsRunning="True" IsVisible="True" Color="#512BD4" />

        <VerticalStackLayout x:Name="EmptyStateLayout" IsVisible="False" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" Spacing="15">
            <Label Text="Brak powiadomień" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" TextColor="{AppThemeBinding Light=#333333, Dark=#E8E8E8}" />
            <Label Text="Nie masz żadnych nowych powiadomień." FontSize="16" HorizontalTextAlignment="Center" TextColor="{AppThemeBinding Light=#666666, Dark=#B0B0B0}" />
        </VerticalStackLayout>

        <CollectionView x:Name="NotificationsCollectionView" ItemsSource="{Binding Notifications}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="10" Padding="15" BorderColor="{AppThemeBinding Light=#EEEEEE, Dark=#333333}" CornerRadius="10" BackgroundColor="{AppThemeBinding Light=White, Dark=#1F1F1F}">
                        <VerticalStackLayout Spacing="10">
                            <Label Text="{Binding Title}" FontSize="16" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                            <Label Text="{Binding Message}" FontSize="14" TextColor="{AppThemeBinding Light=#666666, Dark=#B0B0B0}" />
                            <Label Text="{Binding CreatedAt}" FontSize="12" TextColor="{AppThemeBinding Light=#999999, Dark=#808080}" />
                            
                            <StackLayout Orientation="Horizontal" Spacing="10" Padding="0,10,0,0">
                                <Button 
                                    x:Name="AcceptButton"
                                    Text="Przyjmij opiekę" 
                                    FontSize="12"
                                    Clicked="OnAcceptButtonClicked"
                                    BackgroundColor="#4CAF50"
                                    TextColor="White"
                                    CornerRadius="5"
                                    HorizontalOptions="FillAndExpand" />
                                <Button 
                                    x:Name="RejectButton"
                                    Text="Odrzuć" 
                                    FontSize="12"
                                    Clicked="OnRejectButtonClicked"
                                    BackgroundColor="#f44336"
                                    TextColor="White"
                                    CornerRadius="5"
                                    HorizontalOptions="FillAndExpand" />
                            </StackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button x:Name="RefreshButton" Text="Odśwież" Clicked="OnRefreshClicked" BackgroundColor="#512BD4" TextColor="White" />
        <Button x:Name="BackButton" Text="Wróć" Clicked="OnBackClicked" BackgroundColor="#512BD4" TextColor="White" />
    </VerticalStackLayout>

</ContentPage>

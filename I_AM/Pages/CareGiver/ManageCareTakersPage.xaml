<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
xmlns:local="clr-namespace:I_AM.Models"
x:Class="I_AM.Pages.CareGiver.ManageCareTakersPage"
Title="Zarzadzaj Podopiecznymi"
Shell.NavBarIsVisible="False"
BackgroundColor="{AppThemeBinding Light=White, Dark=#121212}">

    <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="*" RowSpacing="0">
        
        <VerticalStackLayout 
            Grid.Row="0"
            Padding="20"
            Spacing="5"
            BackgroundColor="#512BD4">
            <Label 
                Text="Zarzadzaj Podopiecznymi"
                FontSize="32"
                FontAttributes="Bold"
                TextColor="White"
                HorizontalOptions="Center" />
        </VerticalStackLayout>

        <ScrollView Grid.Row="1" BackgroundColor="{AppThemeBinding Light=White, Dark=#121212}">
            <VerticalStackLayout 
                Padding="20"
                Spacing="15">

                <ActivityIndicator 
                    x:Name="LoadingIndicator"
                    IsRunning="False"
                    IsVisible="False"
                    Color="#512BD4" />

                <Label 
                    x:Name="ErrorLabel"
                    Text=""
                    TextColor="#d32f2f"
                    IsVisible="False"
                    FontSize="14"
                    HorizontalOptions="Fill"
                    HorizontalTextAlignment="Center" />

                <Frame 
                    BorderColor="#512BD4"
                    CornerRadius="10"
                    Padding="15"
                    HasShadow="True"
                    BackgroundColor="{AppThemeBinding Light=White, Dark=#1F1F1F}">
                    <VerticalStackLayout Spacing="15">
                        <Label 
                            Text="Email Podopiecznego"
                            FontSize="16"
                            FontAttributes="Bold"
                            TextColor="{AppThemeBinding Light=#333333, Dark=#E8E8E8}" />
                        
                        <Entry 
                            x:Name="CareTakerEmailEntry"
                            Placeholder="Wpisz email podopiecznego"
                            Keyboard="Email"
                            FontSize="14" />

                        <Button 
                            x:Name="AddButton"
                            Text="Wyslij Zaproszenie"
                            Clicked="OnAddCareTakerClicked"
                            BackgroundColor="#512BD4"
                            TextColor="White"
                            FontSize="16" />
                    </VerticalStackLayout>
                </Frame>

                <Label 
                    Text="Moi Podopieczni"
                    FontSize="18"
                    FontAttributes="Bold"
                    TextColor="{AppThemeBinding Light=#333333, Dark=#E8E8E8}"
                    Margin="0,10,0,0" />

                <ActivityIndicator 
                    x:Name="CareTakersLoadingIndicator"
                    IsRunning="False"
                    IsVisible="False"
                    Color="#512BD4" />

                <CollectionView x:Name="CareTakersCollectionView" ItemsSource="{Binding CareTakers}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="local:CaregiverInfo">
                            <Frame Margin="0,5,0,5" Padding="15" BorderColor="{AppThemeBinding Light=#E0E0E0, Dark=#333333}" CornerRadius="8" BackgroundColor="{AppThemeBinding Light=White, Dark=#1F1F1F}">
                                <VerticalStackLayout Spacing="10">
                                    <StackLayout Orientation="Horizontal" Spacing="10">
                                        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="FillAndExpand">
                                            <Label 
                                                Text="{Binding FirstName}" 
                                                FontSize="14"
                                                FontAttributes="Bold"
                                                TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                                            <Label 
                                                Text="{Binding Email}"
                                                FontSize="12"
                                                TextColor="{AppThemeBinding Light=#666666, Dark=#B0B0B0}" />
                                            <Label 
                                                Text="{Binding Status, StringFormat='Status: {0}'}"
                                                FontSize="11"
                                                TextColor="{AppThemeBinding Light=#999999, Dark=#808080}" />
                                        </VerticalStackLayout>
                                    </StackLayout>
                                    <StackLayout Orientation="Horizontal" Spacing="5">
                                        <Button 
                                            x:Name="AcceptButton"
                                            Text="Przyjmij"
                                            Clicked="OnAcceptCareTakerClicked"
                                            BackgroundColor="#4CAF50"
                                            TextColor="White"
                                            FontSize="12"
                                            Padding="10,5"
                                            HorizontalOptions="FillAndExpand" />
                                        <Button 
                                            x:Name="RejectButton"
                                            Text="Odrzuc"
                                            Clicked="OnRejectCareTakerClicked"
                                            BackgroundColor="#FF9800"
                                            TextColor="White"
                                            FontSize="12"
                                            Padding="10,5"
                                            HorizontalOptions="FillAndExpand" />
                                        <Button 
                                            x:Name="RemoveButton"
                                            Text="Usun"
                                            Clicked="OnRemoveCareTakerClicked"
                                            BackgroundColor="#f44336"
                                            TextColor="White"
                                            FontSize="12"
                                            Padding="10,5"
                                            HorizontalOptions="FillAndExpand" />
                                    </StackLayout>
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Label 
                    x:Name="NoCareTakersLabel"
                    Text="Nie masz jeszcze zadnych podopiecznych"
                    FontSize="14"
                    TextColor="{AppThemeBinding Light=#999999, Dark=#808080}"
                    HorizontalTextAlignment="Center"
                    IsVisible="False"
                    Margin="0,20,0,0" />

            </VerticalStackLayout>
        </ScrollView>

        <VerticalStackLayout 
            Grid.Row="2"
            Padding="20"
            Spacing="10"
            BackgroundColor="{AppThemeBinding Light=White, Dark=#121212}">

            <Button 
                x:Name="BackButton"
                Text="Wroc"
                Clicked="OnBackClicked"
                BackgroundColor="Transparent"
                TextColor="#512BD4"
                BorderColor="#512BD4"
                BorderWidth="1"
                CornerRadius="10" />

        </VerticalStackLayout>

    </Grid>

</ContentPage>

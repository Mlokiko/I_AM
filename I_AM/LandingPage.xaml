<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="I_AM.LandingPage">

    <VerticalStackLayout 
        VerticalOptions="Center" 
        HorizontalOptions="Center"
        Spacing="25">

        <Image 
        Source="logo.png"
        HeightRequest="200"
        HorizontalOptions="Center" 
        Aspect="AspectFit" />

        <Label>
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="Aplikacja dla ludzi w potrzebie. " />
                    <Span Text="Kliknij po wiÄ™cej informacji"
                  TextColor="LightBlue" 
                  TextDecorations="Underline">
                        <Span.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnSpanTapped" />
                        </Span.GestureRecognizers>
                    </Span>
                </FormattedString>
            </Label.FormattedText>
        </Label>


        <Button 
            x:Name="MyLoginButton"
            Text="Logowanie"
            Clicked="OnLoginButtonClicked" 
            HorizontalOptions="Center" />

        <Button 
            x:Name="MyRegisterButton"
            Text="Rejestracja"
            Clicked="OnRegisterButtonClicked" 
            HorizontalOptions="Center" />

    </VerticalStackLayout>


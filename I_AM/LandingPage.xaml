<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="I_AM.LandingPage">



    <VerticalStackLayout 
        VerticalOptions="Center" 
        HorizontalOptions="Center"
        Spacing="25">

        <Image 
        Source="logo.png"
        HeightRequest="200"
        HorizontalOptions="Center" 
        Aspect="AspectFit" />

        <Label 
        Text="I AM"
        FontSize="32"
        TextColor="DeepSkyBlue"
        FontAttributes="Bold"
        HorizontalOptions="Center" />

        <Label 
        Text="I AM, a tak serio, aplikacja dla ludzi w potrzebie. Zaloguj lub zerejestruj siÄ™"
        FontSize="18"
        HorizontalOptions="Center" />


        <Button 
            x:Name="MyLoginButton"
            Text="Logowanie"
            Clicked="OnLoginButtonClicked" 
            HorizontalOptions="Center" />

        <Button 
            x:Name="MyRegisterButton"
            Text="Rejestracja"
            Clicked="OnRegisterButtonClicked" 
            HorizontalOptions="Center" />

    </VerticalStackLayout>


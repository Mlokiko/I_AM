<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="I_AM.AddCaregiverPage"
             Title="Manage Caregivers"
             Shell.NavBarIsVisible="True">

    <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="*" RowSpacing="0">
        
        <VerticalStackLayout 
            Grid.Row="0"
            Padding="20"
            Spacing="5"
            BackgroundColor="#512BD4">
            <Label 
                Text="Add Caregiver"
                FontSize="32"
                FontAttributes="Bold"
                TextColor="White"
                HorizontalOptions="Center" />
        </VerticalStackLayout>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout 
                Padding="20"
                Spacing="15">

                <ActivityIndicator 
                    x:Name="LoadingIndicator"
                    IsRunning="False"
                    IsVisible="False"
                    Color="#512BD4" />

                <Label 
                    x:Name="ErrorLabel"
                    Text=""
                    TextColor="#d32f2f"
                    IsVisible="False"
                    FontSize="14"
                    HorizontalOptions="Fill"
                    HorizontalTextAlignment="Center" />

                <Frame 
                    BorderColor="#512BD4"
                    CornerRadius="10"
                    Padding="15"
                    HasShadow="True">
                    <VerticalStackLayout Spacing="15">
                        <Label 
                            Text="Caregiver Email"
                            FontSize="16"
                            FontAttributes="Bold"
                            TextColor="#333333" />
                        
                        <Entry 
                            x:Name="CaregiverEmailEntry"
                            Placeholder="Enter caregiver email"
                            Keyboard="Email"
                            FontSize="14" />

                        <Button 
                            x:Name="AddButton"
                            Text="Send Invitation"
                            Clicked="OnAddCaregiverClicked"
                            BackgroundColor="#512BD4"
                            TextColor="White"
                            FontSize="16" />
                    </VerticalStackLayout>
                </Frame>

                <Label 
                    Text="My Caregivers"
                    FontSize="18"
                    FontAttributes="Bold"
                    TextColor="#333333"
                    Margin="0,10,0,0" />

                <ActivityIndicator 
                    x:Name="CaregiversLoadingIndicator"
                    IsRunning="False"
                    IsVisible="False"
                    Color="#512BD4" />

                <CollectionView x:Name="CaregiversCollectionView" ItemsSource="{Binding Caregivers}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Margin="0,5,0,5" Padding="15" BorderColor="#E0E0E0" CornerRadius="8">
                                <VerticalStackLayout Spacing="10">
                                    <StackLayout Orientation="Horizontal" Spacing="10">
                                        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="FillAndExpand">
                                            <Label 
                                                Text="{Binding FirstName}" 
                                                FontSize="14"
                                                FontAttributes="Bold"
                                                TextColor="#000000" />
                                            <Label 
                                                Text="{Binding Email}"
                                                FontSize="12"
                                                TextColor="#666666" />
                                            <Label 
                                                Text="{Binding Status}"
                                                FontSize="11"
                                                TextColor="#999999" />
                                        </VerticalStackLayout>
                                        <Button 
                                            x:Name="RemoveButton"
                                            Text="Remove"
                                            Clicked="OnRemoveCaregiverClicked"
                                            BackgroundColor="#f44336"
                                            TextColor="White"
                                            FontSize="12"
                                            Padding="10,5"
                                            VerticalOptions="Center" />
                                    </StackLayout>
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Label 
                    x:Name="NoCaregiversLabel"
                    Text="You dont have any caregivers yet"
                    FontSize="14"
                    TextColor="#999999"
                    HorizontalTextAlignment="Center"
                    IsVisible="False"
                    Margin="0,20,0,0" />

            </VerticalStackLayout>
        </ScrollView>

        <VerticalStackLayout 
            Grid.Row="2"
            Padding="20"
            Spacing="10">

            <Button 
                x:Name="BackButton"
                Text="Back"
                Clicked="OnBackClicked"
                BackgroundColor="Transparent"
                TextColor="#512BD4"
                BorderColor="#512BD4"
                BorderWidth="1"
                CornerRadius="10" />

        </VerticalStackLayout>

    </Grid>

</ContentPage>

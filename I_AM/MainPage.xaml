<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="I_AM.MainPage">

    <VerticalStackLayout 
        VerticalOptions="Fill" 
        HorizontalOptions="Fill"
        Spacing="15"
        Padding="20">

        <!-- Header -->
        <VerticalStackLayout 
            Spacing="5"
            Margin="0,10,0,20">
            <Label 
                Text="Panel główny"
                FontSize="32"
                FontAttributes="Bold"
                HorizontalOptions="Center" />
        </VerticalStackLayout>

        <!-- Main Content -->
        <ScrollView>
            <VerticalStackLayout Spacing="10">
                <Button 
                    x:Name="NotificationsButton"
                    Text="Powiadomienia"
                    Clicked="OnNotificationsButtonClicked" 
                    HorizontalOptions="Fill"
                    BackgroundColor="#FFA500" />

                <Button 
                    x:Name="DailyActivityButton"
                    Text="Wykonaj codzienną aktywność"
                    Clicked="OnDailyActivityButtonClicked" 
                    HorizontalOptions="Fill" />

                <Button 
                    x:Name="MyCalendarButton"
                    Text="Kalendarz"
                    Clicked="OnCalendarButtonClicked" 
                    HorizontalOptions="Fill" />

                <Button 
                    x:Name="MySetProtectorButton"
                    Text="Zarządzaj Opiekunami"
                    Clicked="OnManagCaregiversButtonClicked" 
                    HorizontalOptions="Fill" />

                <Button 
                    x:Name="EditCareTakerQuestionsButton"
                    Text="Edytuj pytania podpiecznego"
                    Clicked="OnEditCareTakerQuestionsButtonClicked" 
                    HorizontalOptions="Fill" />

                <Button 
                    x:Name="MyManageAccountButton"
                    Text="Zarządzaj swoim kontem"
                    Clicked="OnManageOwnAccountButtonClicked" 
                    HorizontalOptions="Fill" />
            </VerticalStackLayout>
        </ScrollView>

        <!-- Footer - Logout Button -->
        <Button 
            x:Name="LogoutButton"
            Text="Wyloguj się"
            Clicked="OnLogoutButtonClicked" 
            HorizontalOptions="Fill"
            BackgroundColor="#d32f2f"
            TextColor="White"
            Margin="0,10,0,0" />

    </VerticalStackLayout>
</ContentPage>


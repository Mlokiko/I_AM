<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="I_AM.MainPage">



    <VerticalStackLayout 
        VerticalOptions="Center" 
        HorizontalOptions="Center"
        Spacing="25">

        <Label 
        Text="Panel główny"
        FontSize="32"
        FontAttributes="Bold"
        HorizontalOptions="Center" />


        <Button 
            x:Name="MyActivityButton"
            Text="Wykonaj codzienną aktywność"
            Clicked="OnLoginButtonClicked" 
            HorizontalOptions="Center" />

        <Button 
            x:Name="MyCallendarButton"
            Text="Kalendarz"
            Clicked="OnRegisterButtonClicked" 
            HorizontalOptions="Center" />
        <Button 
            x:Name="MySetProtectorButton"
            Text="Wyznacz osobę jako swojego opkiekuna"
            Clicked="OnRegisterButtonClicked" 
            HorizontalOptions="Center" />
        <Button 
            x:Name="MyEditQuestionsButton"
            Text="Edytuj pytania podpiecznego"
            Clicked="OnRegisterButtonClicked" 
            HorizontalOptions="Center" />
        <Button 
            x:Name="MyManageAccountButton"
            Text="Zarządzaj swoim kontem"
            Clicked="OnManageOwnAccountButtonClicked" 
            HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>

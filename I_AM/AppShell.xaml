<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="I_AM.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:I_AM"
    xmlns:auth="clr-namespace:I_AM.Pages.Authentication"
    xmlns:main="clr-namespace:I_AM.Pages.Main"
    xmlns:caretaker="clr-namespace:I_AM.Pages.CareTaker"
    xmlns:caregiver="clr-namespace:I_AM.Pages.CareGiver"
    Title="I_AM">

    <!-- Loading page shown while authentication is in progress -->
    <ShellContent
        Title="Loading"
        ContentTemplate="{DataTemplate auth:LoadingPage}"
        Route="LoadingPage" />

    <!-- Main pages as ShellContent -->
    <ShellContent
        Title="Landing Page"
        ContentTemplate="{DataTemplate auth:LandingPage}"
        Route="LandingPage" />

    <ShellContent
        Title="Panel główny - CareTaker"
        ContentTemplate="{DataTemplate caretaker:CareTakerMainPage}"
        Route="CareTakerMainPage" />

    <ShellContent
        Title="Panel główny - CareGiver"
        ContentTemplate="{DataTemplate caregiver:CareGiverMainPage}"
        Route="CareGiverMainPage" />

    <ShellContent
        Title="Powiadomienia"
        ContentTemplate="{DataTemplate main:NotificationPage}"
        Route="NotificationPage" />

    <ShellContent
        Title="Zarządzaj Kontem"
        ContentTemplate="{DataTemplate main:ManageOwnAccountPage}"
        Route="ManageOwnAccountPage" />

</Shell>



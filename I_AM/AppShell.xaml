<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="I_AM.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:I_AM"
    xmlns:auth="clr-namespace:I_AM.Pages.Authentication"
    xmlns:main="clr-namespace:I_AM.Pages.Main"
    xmlns:caregiver="clr-namespace:I_AM.Pages.CareGiver"
    Title="I_AM">

    <!-- Strony autentykacji -->
    <ShellContent
        Title="Logowanie"
        ContentTemplate="{DataTemplate auth:LoginPage}"
        Route="LoginPage" />

    <ShellContent
        Title="Rejestracja"
        ContentTemplate="{DataTemplate auth:RegisterPage}"
        Route="RegisterPage" />

    <!-- Strony główne aplikacji -->
    <ShellContent
        Title="Landing Page"
        ContentTemplate="{DataTemplate auth:LandingPage}"
        Route="LandingPage" />

    <ShellContent
        Title="Panel główny"
        ContentTemplate="{DataTemplate main:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Powiadomienia"
        ContentTemplate="{DataTemplate main:NotificationPage}"
        Route="NotificationPage" />

    <ShellContent
        Title="Zarządzaj Kontem"
        ContentTemplate="{DataTemplate main:ManageOwnAccountPage}"
        Route="ManageOwnAccountPage" />

</Shell>

